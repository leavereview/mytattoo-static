---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import CookieConsent from '../components/CookieConsent.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  schemaType?: 'Article' | 'BlogPosting' | 'WebPage' | 'CollectionPage';
  publishedDate?: string;
  modifiedDate?: string;
  noindex?: boolean;
  author?: string;
}

const {
  title,
  description = 'MyTattoo.Software - The complete tattoo studio management platform. Booking, client management, consent forms, and deposits.',
  image = '/images/og-default.jpg',
  type = 'website',
  schemaType,
  publishedDate,
  modifiedDate,
  noindex = false,
  author = 'John Powell'
} = Astro.props;

// Determine the schema type to use
const resolvedSchemaType = schemaType || (type === 'article' ? 'Article' : 'WebPage');

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const fullTitle = title === 'Home' ? 'MyTattoo.Software - Tattoo Studio Management Software' : `${title} | MyTattoo.Software`;

const schemaOrg = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Organization",
      "@id": "https://mytattoo.software/#organization",
      "name": "MyTattoo.Software",
      "url": "https://mytattoo.software",
      "logo": { "@type": "ImageObject", "url": "https://mytattoo.software/logo.svg" }
    },
    {
      "@type": "WebSite",
      "@id": "https://mytattoo.software/#website",
      "url": "https://mytattoo.software",
      "name": "MyTattoo.Software",
      "publisher": { "@id": "https://mytattoo.software/#organization" }
    },
    {
      "@type": resolvedSchemaType,
      "@id": canonicalURL.href,
      "url": canonicalURL.href,
      "name": title,
      "description": description,
      "isPartOf": { "@id": "https://mytattoo.software/#website" },
      ...(publishedDate && { "datePublished": publishedDate }),
      ...(modifiedDate && { "dateModified": modifiedDate }),
      ...((resolvedSchemaType === 'Article' || resolvedSchemaType === 'BlogPosting') && {
        "author": {
          "@type": "Person",
          "name": author,
          "url": "https://mytattoo.software/about/"
        },
        "publisher": { "@id": "https://mytattoo.software/#organization" }
      })
    }
  ]
};
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="generator" content={Astro.generator} />
  <title>{fullTitle}</title>
  <meta name="description" content={description} />
  {noindex && <meta name="robots" content="noindex, nofollow" />}
  <link rel="canonical" href={canonicalURL} />
  <meta property="og:type" content={type} />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:title" content={fullTitle} />
  <meta property="og:description" content={description} />
  <meta property="og:site_name" content="MyTattoo.Software" />
  <meta property="og:image" content={new URL(image, Astro.site)} />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:url" content={canonicalURL} />
  <meta name="twitter:title" content={fullTitle} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={new URL(image, Astro.site)} />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
  <script type="application/ld+json" set:html={JSON.stringify(schemaOrg)} />

  <!-- Google Analytics - Conditional Loading Based on Cookie Consent -->
  <script is:inline>
    (function() {
      // Check if user has accepted cookies
      try {
        const consent = localStorage.getItem('cookieConsent');
        if (consent) {
          const consentData = JSON.parse(consent);
          if (consentData.accepted === true) {
            // Load Google Analytics
            const script = document.createElement('script');
            script.async = true;
            script.src = 'https://www.googletagmanager.com/gtag/js?id=G-BEN12HQTLR';
            document.head.appendChild(script);

            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());
            gtag('config', 'G-BEN12HQTLR');
          }
        }
      } catch (error) {
        console.error('Error loading analytics:', error);
      }
    })();
  </script>
</head>
<body class="min-h-screen flex flex-col">
  <Navigation />
  <main class="flex-grow pt-16 md:pt-20">
    <slot />
  </main>
  <Footer />
  <CookieConsent />
</body>
</html>
