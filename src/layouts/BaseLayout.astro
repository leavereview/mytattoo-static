---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  publishedDate?: string;
  modifiedDate?: string;
  noindex?: boolean;
  author?: string;
}

const {
  title,
  description = 'MyTattoo.Software - The complete tattoo studio management platform. Booking, client management, consent forms, and deposits.',
  image = '/images/og-default.jpg',
  type = 'website',
  publishedDate,
  modifiedDate,
  noindex = false,
  author = 'John Powell'
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const fullTitle = title === 'Home' ? 'MyTattoo.Software - Tattoo Studio Management Software' : `${title} | MyTattoo.Software`;

const schemaOrg = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Organization",
      "@id": "https://mytattoo.software/#organization",
      "name": "MyTattoo.Software",
      "url": "https://mytattoo.software",
      "logo": { "@type": "ImageObject", "url": "https://mytattoo.software/logo.svg" }
    },
    {
      "@type": "WebSite",
      "@id": "https://mytattoo.software/#website",
      "url": "https://mytattoo.software",
      "name": "MyTattoo.Software",
      "publisher": { "@id": "https://mytattoo.software/#organization" }
    },
    {
      "@type": type === 'article' ? 'Article' : 'WebPage',
      "@id": canonicalURL.href,
      "url": canonicalURL.href,
      "name": title,
      "description": description,
      "isPartOf": { "@id": "https://mytattoo.software/#website" },
      ...(publishedDate && { "datePublished": publishedDate }),
      ...(modifiedDate && { "dateModified": modifiedDate }),
      ...(type === 'article' && {
        "author": {
          "@type": "Person",
          "name": author,
          "url": "https://mytattoo.software/about/"
        },
        "publisher": { "@id": "https://mytattoo.software/#organization" }
      })
    }
  ]
};
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="generator" content={Astro.generator} />
  <title>{fullTitle}</title>
  <meta name="description" content={description} />
  {noindex && <meta name="robots" content="noindex, nofollow" />}
  <link rel="canonical" href={canonicalURL} />
  <meta property="og:type" content={type} />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:title" content={fullTitle} />
  <meta property="og:description" content={description} />
  <meta property="og:site_name" content="MyTattoo.Software" />
  <meta property="og:image" content={new URL(image, Astro.site)} />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:url" content={canonicalURL} />
  <meta name="twitter:title" content={fullTitle} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={new URL(image, Astro.site)} />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
  <script type="application/ld+json" set:html={JSON.stringify(schemaOrg)} />
</head>
<body class="min-h-screen flex flex-col">
  <Navigation />
  <main class="flex-grow pt-16 md:pt-20">
    <slot />
  </main>
  <Footer />
</body>
</html>
