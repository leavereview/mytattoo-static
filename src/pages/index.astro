---
import BaseLayout from '../layouts/BaseLayout.astro';

// Software Application Schema
const softwareApplicationSchema = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "@id": "https://mytattoo.software/#software",
  "name": "MyTattoo.Software",
  "alternateName": "MyTattoo",
  "description": "Complete tattoo studio management software for tattoo artists and body art studios. Online booking, consent forms, client management, and deposit collection in one platform.",
  "applicationCategory": "BusinessApplication",
  "operatingSystem": "Web, iOS, Android",
  "offers": {
    "@type": "Offer",
    "@id": "https://mytattoo.software/#free-trial",
    "price": "0",
    "priceCurrency": "GBP",
    "name": "14-Day Free Trial",
    "description": "Try MyTattoo.Software free for 14 days with full access",
    "availability": "https://schema.org/InStock",
    "url": "https://mytattoo.software/contact/",
    "priceValidUntil": "2026-12-31"
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "4.9",
    "ratingCount": "86",
    "bestRating": "5",
    "worstRating": "1"
  },
  "featureList": [
    "Online Booking & Consultations",
    "Client Management & Profiles",
    "Digital Consent Forms",
    "Deposit Collection",
    "Artist Portfolio Management",
    "Appointment Scheduling",
    "Automated Reminders (SMS & Email)",
    "Aftercare Instructions",
    "Payment Processing",
    "Reports & Analytics",
    "Mobile App",
    "Instagram Integration"
