  "url": "https://mytattoo.software",
  "screenshot": "https://mytattoo.software/images/dashboard-screenshot.jpg",
  "softwareVersion": "2.0",
  "applicationSubCategory": "Tattoo Studio Management",
  "audience": {
    "@type": "BusinessAudience",
    "audienceType": "Tattoo Studios, Tattoo Artists, Body Art Studios, Piercing Studios"
  }
