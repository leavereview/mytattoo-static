import BaseLayout from '../layouts/BaseLayout.astro';

const faqs = [
  {
    question: "What is tattoo booking software?",
    answer: "Tattoo booking software lets clients book appointments online 24/7, pay deposits, and receive automatic confirmations. It replaces DMs, phone calls, and manual scheduling with an automated system that works while you sleep."
  },
  {
    question: "How much does tattoo booking software cost?",
    answer: "Tattoo booking software typically costs $20-100 per month. MyTattoo.Software offers flat monthly pricing with unlimited bookings—no per-booking fees that punish your success."
  },
  {
    question: "Can clients pay deposits when booking?",
    answer: "Yes, good tattoo booking software collects deposits automatically at the time of booking. This dramatically reduces no-shows because clients have skin in the game from the start."
  },
  {
    question: "Will booking software reduce no-shows?",
    answer: "Yes, studies show that deposit collection combined with automated reminders reduces no-shows by 60-80%. A $50 deposit makes clients much more likely to show up or properly cancel."
  },
