---
// Tag Archive Page - /blog/tag/[tag]
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');

  // Get all unique tags
  const allTags = new Set<string>();
  posts.forEach(post => {
    post.data.tags?.forEach(tag => allTags.add(tag));
  });

  // Create a path for each tag
  return Array.from(allTags).map(tag => ({
    params: { tag: tag.toLowerCase().replace(/\s+/g, '-') },
    props: {
      tag,
      posts: posts.filter(post => post.data.tags?.includes(tag))
        .sort((a, b) => new Date(b.data.date).valueOf() - new Date(a.data.date).valueOf())
    }
  }));
}

const { tag, posts } = Astro.props;

function formatTagForDisplay(tag: string): string {
  return tag.split(' ').map(word =>
    word.charAt(0).toUpperCase() + word.slice(1)
  ).join(' ');
}

const displayTag = formatTagForDisplay(tag);

// noindex sparse tags (fewer than 3 posts) to avoid thin content penalties
const shouldNoindex = posts.length < 3;

// Tag descriptions for SEO
const tagDescriptions: Record<string, string> = {
  'Software': 'Tattoo studio software guides: booking systems, design tools, and management platforms for artists and studio owners.',
  'Business': 'Business advice for tattoo artists and studio owners including marketing, growth strategies, and operations.',
  'Booking': 'Tattoo booking guides: appointment management, flash booking, no-show prevention, and scheduling best practices.',
  'Career': 'Tattoo career resources including apprenticeships, becoming an artist, income guides, and professional development.',
  'Pricing': 'Tattoo pricing guides covering rates, costs, tipping etiquette, and pricing strategies for artists.',
  'Client Care': 'Client management resources including consent forms, preparation guides, aftercare, and consultation tips.',
  'Studio Management': 'Studio management guides for running a successful tattoo shop including policies and workflows.',
};

const description = tagDescriptions[tag] || `Explore ${posts.length} articles about ${tag.toLowerCase()} for tattoo artists and studio owners.`;
---

<BaseLayout
  title={`${displayTag} - Tattoo Articles & Guides`}
  description={description}
  noindex={shouldNoindex}
>
  <!-- Breadcrumbs -->
  <div class="bg-gray-100 py-3">
    <div class="container-custom">
      <Breadcrumbs items={[
        { label: 'Home', href: '/' },
        { label: 'Blog', href: '/blog/' },
        { label: `Tag: ${formatTagForDisplay(tag)}` }
      ]} />
    </div>
  </div>

  <!-- Hero -->
  <section class="bg-gradient-to-br from-brand-navy to-gray-900 text-white py-16">
    <div class="container-custom">
      <div class="max-w-3xl">
        <span class="badge-primary mb-4">Tag</span>
        <h1 class="text-4xl md:text-5xl font-bold mb-4">{formatTagForDisplay(tag)}</h1>
        <p class="text-xl text-gray-300">
          {posts.length} article{posts.length !== 1 ? 's' : ''} tagged with "{tag}"
        </p>
      </div>
    </div>
  </section>

  <!-- Blog Posts Grid -->
  <section class="section bg-white">
    <div class="container-custom">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {posts.map((post) => (
          <article class="card group">
            <a href={`/blog/${post.slug}/`} class="block">
              {post.data.image && (
                <div class="aspect-video overflow-hidden rounded-lg mb-4 -mx-6 -mt-6">
                  <img
                    src={post.data.image}
                    alt={post.data.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    loading="lazy"
                  />
                </div>
              )}
              <div class="flex flex-wrap gap-2 mb-3">
                {post.data.tags?.slice(0, 2).map(t => (
                  <span class={`text-xs font-medium uppercase tracking-wider ${t === tag ? 'text-brand-red' : 'text-gray-500'}`}>
                    {t}
                  </span>
                ))}
              </div>
              <h2 class="text-xl font-bold text-brand-navy mb-2 group-hover:text-brand-red transition-colors">
                {post.data.title}
              </h2>
              <p class="text-gray-600 text-sm line-clamp-2 mb-4">
                {post.data.description}
              </p>
              <div class="flex items-center justify-between text-sm text-gray-500">
                <time datetime={post.data.date}>
                  {new Date(post.data.date).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </time>
                <span class="text-brand-red font-medium group-hover:underline">
                  Read more â†’
                </span>
              </div>
            </a>
          </article>
        ))}
      </div>

      {posts.length === 0 && (
        <div class="text-center py-12">
          <p class="text-gray-500">No articles found with this tag.</p>
          <a href="/blog/" class="btn-primary mt-4 inline-block">
            View All Articles
          </a>
        </div>
      )}
    </div>
  </section>

  <!-- CTA -->
  <section class="section bg-brand-red-light">
    <div class="container-custom text-center">
      <h2 class="text-3xl font-bold text-brand-navy mb-4">Explore More Topics</h2>
      <p class="text-gray-600 mb-6 max-w-xl mx-auto">
        Discover more insights and guides for running a successful tattoo studio.
      </p>
      <a href="/blog/" class="btn-primary">
        View All Articles
      </a>
    </div>
  </section>
</BaseLayout>
